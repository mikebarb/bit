<h1>Listing slots</h1>
<%= page_entries_info @slots %>
<%= paginate @slots %>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Timeslot</th>
      <th>Location</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @slots.each do |slot| %>
      <tr>
        <td><%= slot.id %></td>
        <td><%= slot.timeslot.strftime('%a %Y-%m-%d %l:%M %P') %></td>
        <td><%= slot.location %></td>
        <td><%= slot.comment %></td>
        <td><%= link_to 'Show', slot %></td>
        <td><%= link_to 'Edit', edit_slot_path(slot) %></td>
        <td><%= link_to 'Destroy', slot, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= paginate @slots %>
<%= page_entries_info @slots %>
<br>
<%= link_to 'New Slot', new_slot_path %>
