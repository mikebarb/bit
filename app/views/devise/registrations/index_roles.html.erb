<h1>Listing users and their roles</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Email</th>
      <th>Role</th>
      <th>Last logged in</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td><%= user.last_sign_in_at %></td>
        <td><%= link_to 'Edit', edit_user_roles_path(user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

