<p id="notice"><%= notice %></p>

<% students = @session.students %>
<% tutors = @session.tutors %>
<% slot = Slot.find(@session.slot_id) %>

<strong>Students</strong>
<% if students.count > 0 %>
  <% students.each do |student| %>
    <p>
      <%= student.id %>
      <%= ": " + student.gname + ' ' + student.sname + ' (' + student.initials + ')' %>
    </p>
  <% end %>
<% else %>
  <p> Currently no students are selected </p>
<% end %>

<p>
  <strong>Tutors</strong>
</p>
<% if tutors.count > 0 %>
  <% tutors.each do |tutor| %>
    <p>
      <%= tutor.id %>
      <%= ": " + tutor.gname + ' ' + tutor.sname + ' (' + tutor.initials + ')' %>
    </p>
  <% end %>
<% else %>
  <p> Currently no tutors are selected </p>
<% end %>

<p>
  <strong>Slot:</strong>
  <%= @session.slot_id %>
</p>

<p>
  <%= slot.timeslot %> 
</p>
<p>
  <%= slot.location %>
</p>

<p>
  <strong>Comments:</strong>
  <%= @session.comments %>
</p>

<%= link_to 'Edit', edit_session_path(@session) %> |
<%= link_to 'Move', move_session_path(@session) %> |
<%= link_to 'Back', sessions_path %>
