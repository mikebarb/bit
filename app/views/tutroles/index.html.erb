<h1>Listing Tutor Roles - matching lessons and tutors</h1>

<%= page_entries_info @tutroles %>
<%= paginate @tutroles %>

<table>
  <thead>
    <tr>
      <th>Lesson</th>
      <th>Tutor</th>
      <th>Status</th>
      <th>Kind</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tutroles.each do |tutrole| %>
      <tr>
        <td><%= tutrole.lesson %></td>
        <td><%= tutrole.tutor %></td>
        <td><%= tutrole.status %></td>
        <td><%= tutrole.kind %></td>
        <td><%= tutrole.comment %></td>
        <td><%= link_to 'Show', tutrole %></td>
        <td><%= link_to 'Edit', edit_tutrole_path(tutrole) %></td>
        <td><%= link_to 'Destroy', tutrole, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @tutroles %>
<%= page_entries_info @tutroles %>

<br>

<%= link_to 'New Tutrole', new_tutrole_path %>
